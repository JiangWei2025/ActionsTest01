#!/bin/sh

# 初回 clone のチェック (HEAD が初回 checkout の場合)
# Git は clone 時に "HEAD" → "refs/heads/main" の切替が最初の post-checkout として実行される
if [ "$3" = "1" ]; then
  echo "初回 clone を検出しました。"

  # Hook インストール
  if [ -f "scripts/install-hooks.sh" ]; then
    echo "Git Hooks を自動インストールします..."
    sh scripts/install-hooks.sh
  fi

fi
